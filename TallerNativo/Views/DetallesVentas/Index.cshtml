@model IEnumerable<TallerNativo.Models.DetallesVenta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle Venta</h1>
<br></br>

<p>

    <div class="col-md-7"><a asp-action="Create" class="btn btn-success">Nuevo Detalle</a></div><br></br>
</p>
<br></br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.IdProductos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venta.IdVenta)
            </td>
            <td>
                    <a asp-action="Edit" class="col-sm-3 btn btn-info" asp-route-id="@item.DetalleVentaId">Editar</a> |
                    <a asp-action="Details" class="col-sm-3 btn btn-secondary" asp-route-id="@item.DetalleVentaId">Detalle</a> |
                    <a asp-action="Delete" class="col-sm-3 btn btn-danger" asp-route-id="@item.DetalleVentaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
