@model IEnumerable<TallerNativo.Models.Producto>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Resultado de Búsqueda</h1>

    <div class="row">
        <div class="col-md-12">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Cantidad</th>              
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model)
                        {
                            <tr>
                                <td>@producto.Codigo</td>
                                <td>@producto.Nombre</td>
                                <td>@producto.Precio</td>
                                <td>@producto.Cantidad</td>
                                
                                <td>
                                    <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.IdProductos" class="col-sm-3 btn btn-info">Editar</a>
                                    <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.IdProductos" class="col-sm-3 btn btn-danger">Eliminar</a>
                                    <a asp-action="Index" class="col-sm-3 btn btn-dark">Regresar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No se encontraron resultados para la búsqueda.</p>
            }
        </div>

    </div>
